<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Crops</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1>Crops</h1>
        <a href="/crops/add" class="btn">Add New Crop</a>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Planted Date</th>
                    <th>Expected Harvest</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% crops.forEach(function(crop) { %>
                    <tr>
                        <td><%= crop.name %></td>
                        <td><%= new Date(crop.planted_date).toLocaleDateString() %></td>
                        <td><%= new Date(crop.expected_harvest).toLocaleDateString() %></td>
                        <td><%= crop.status %></td>
                        <td>
                            <a href="/crops/edit/<%= crop.id %>" class="btn-edit">Edit</a>
                            <form action="/crops/delete/<%= crop.id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
