<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Inventory</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1>Inventory</h1>
        <a href="/inventory/add" class="btn">Add New Item</a>
        <table>
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Condition</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% inventory.forEach(function(item) { %>
                    <tr>
                        <td><%= item.item_name %></td>
                        <td><%= item.category %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.condition %></td>
                        <td>
                            <a href="/inventory/edit/<%= item.id %>" class="btn-edit">Edit</a>
                            <form action="/inventory/delete/<%= item.id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
