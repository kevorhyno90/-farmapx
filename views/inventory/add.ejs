<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Inventory Item</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1>Add New Inventory Item</h1>
        <% if (locals.errors && errors.length > 0) { %>
            <div class="errors">
                <ul>
                    <% errors.forEach(function(error) { %>
                        <li><%= error.msg %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>
        <form action="/inventory/add" method="POST">
            <label for="item_name">Item Name:</label>
            <input type="text" id="item_name" name="item_name" value="<%= locals.inventory ? inventory.item_name : '' %>" required>

            <label for="category">Category:</label>
            <input type="text" id="category" name="category" value="<%= locals.inventory ? inventory.category : '' %>" required>

            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" value="<%= locals.inventory ? inventory.quantity : '' %>" required>

            <label for="condition">Condition:</label>
            <input type="text" id="condition" name="condition" value="<%= locals.inventory ? inventory.condition : '' %>" required>

            <button type="submit">Add Item</button>
        </form>
    </div>
</body>
</html>
