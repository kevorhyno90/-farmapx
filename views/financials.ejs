<!DOCTYPE html>
<html>
<head>
    <title>Financials</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1>Financials</h1>
        <a href="/financials/add" class="btn">Add New Record</a>
        <a href="/" class="btn btn-back">Back</a>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% financials.forEach(record => { %>
                    <tr>
                        <td><%= record.date %></td>
                        <td><%= record.type %></td>
                        <td><%= record.category %></td>
                        <td><%= record.amount %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>