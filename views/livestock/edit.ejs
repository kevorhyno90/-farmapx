<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Livestock</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1>Edit Livestock</h1>
        <% if (locals.errors && errors.length > 0) { %>
            <div class="errors">
                <ul>
                    <% errors.forEach(function(error) { %>
                        <li><%= error.msg %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>
        <form action="/livestock/edit/<%= livestock.id %>" method="POST">
            <label for="type">Type:</label>
            <input type="text" id="type" name="type" value="<%= livestock.type %>" required>

            <label for="breed">Breed:</label>
            <input type="text" id="breed" name="breed" value="<%= livestock.breed %>" required>

            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" value="<%= livestock.quantity %>" required>

            <label for="health_status">Health Status:</label>
            <input type="text" id="health_status" name="health_status" value="<%= livestock.health_status %>" required>

            <button type="submit">Update Livestock</button>
        </form>
    </div>
</body>
</html>
