<!DOCTYPE html>
<html>
<head>
    <title>Financials</title>
    <link rel="stylesheet" type="text/css" href="/styles.css" />
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1>Financials</h1>
        <a href="/financials/add" class="btn">Add New Transaction</a>
        <table>
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% financials.forEach(transaction => { %>
                    <tr>
                        <td><%= transaction.description %></td>
                        <td>$<%= transaction.amount.toFixed(2) %></td>
                        <td><%= transaction.date %></td>
                        <td><%= transaction.type %></td>
                        <td>
                            <a href="/financials/edit/<%= transaction.id %>">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>