<!DOCTYPE html>
<html>
<head>
    <title>Edit Transaction</title>
    <link rel="stylesheet" type="text/css" href="/styles.css" />
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1>Edit Transaction</h1>
        <form action="/financials/edit/<%= transaction.id %>" method="POST">
            <div>
                <label for="description">Description:</label>
                <input type="text" id="description" name="description" value="<%= transaction.description %>" required>
            </div>
            <div>
                <label for="amount">Amount:</label>
                <input type="number" id="amount" name="amount" step="0.01" value="<%= transaction.amount %>" required>
            </div>
            <div>
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" value="<%= transaction.date %>" required>
            </div>
            <div>
                <label for="type">Type:</label>
                <select id="type" name="type">
                    <option value="income" <%= transaction.type === 'income' ? 'selected' : '' %>>Income</option>
                    <option value="expense" <%= transaction.type === 'expense' ? 'selected' : '' %>>Expense</option>
                </select>
            </div>
            <button type="submit" class="btn">Update Transaction</button>
            <a href="/financials" class="btn btn-back">Back to Financials</a>
        </form>
    </div>
</body>
</html>