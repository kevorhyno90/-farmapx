<!DOCTYPE html>
<html>
<head>
    <title>Inventory</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1>Inventory</h1>
        <a href="/inventory/add" class="btn">Add New Item</a>
        <a href="/" class="btn btn-back">Back</a>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Unit</th>
                </tr>
            </thead>
            <tbody>
                <% inventory.forEach(item => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.unit %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>